{
	"name": "todo-app-with-graphql-yoga-fe",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "STAGE=local npm run dev:with-mock",
		"dev:with-mock": "concurrently \"npm run mock:server\" \"next dev --turbopack\"",
		"dev:prod": "next dev --turbopack",
		"mock:server": "tsx src/mock/server-standalone.ts",
		"build": "next build",
		"start": "next start",
		"lint": "biome lint --write ./src/**/*",
		"format": "biome format ./src/**/* --write",
		"check": "biome check --write ./src/**/*"
	},
	"dependencies": {
		"@apollo/client": "^3.13.8",
		"@apollo/client-integration-nextjs": "^0.12.2",
		"@vercel/otel": "^1.11.0",
		"graphql": "^16.11.0",
		"graphql-yoga": "^5.0.0",
		"next": "15.3.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"concurrently": "^8.2.2",
		"lefthook": "^1.11.11",
		"tailwindcss": "^4",
		"tsx": "^4.7.0",
		"typescript": "^5"
	}
}
